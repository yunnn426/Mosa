<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="15dp"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/mosa_logo"
        android:layout_width="120dp"
        android:layout_height="79dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/mosa_color"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        app:layout_constraintTop_toBottomOf="@+id/mosa_logo" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <FrameLayout
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/welcome"
                    android:layout_marginTop="30dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bin_white"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#925A5757"
                android:textSize="19sp"
                android:text="Login with email"

                app:layout_constraintTop_toBottomOf="@+id/welcome"
                android:fontFamily="@font/nanumgothic"
                />
            <View
                android:id="@+id/login_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white_gray"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"

                app:layout_constraintTop_toBottomOf="@+id/login_text"
                />
            <LinearLayout
                android:id="@+id/login1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bin_red"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"

                app:layout_constraintTop_toBottomOf="@+id/login_line"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/email_icon" />
                <EditText
                    android:id="@+id/TextInputEditText_email"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="16dp"
                    android:background="#ffffff"
                    android:textColor="@color/white_gray"
                    android:textColorHint="@color/white_gray"
                    android:fontFamily="@font/nanumgothic"
                    android:hint="email"></EditText>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bin_red"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"

                app:layout_constraintTop_toBottomOf="@+id/login1"

                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/lock_icon" />
                <EditText
                    android:id="@+id/TextInputEditText_password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="16dp"
                    android:background="#ffffff"
                    android:hint="password"
                    android:textColor="@color/white_gray"
                    android:textColorHint="@color/white_gray"
                    android:fontFamily="@font/nanumgothic"

                    android:inputType="textPassword"
                    >
                </EditText>>
            </LinearLayout>

            <android.widget.Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bin_login2"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:fontFamily="@font/nanumgothic"
                android:text="로그인"
                android:textColor="#ffffff"
                android:textSize="20dp"

                app:layout_constraintTop_toBottomOf="@+id/password1" >

            </android.widget.Button>

            <android.widget.Button
                android:id="@+id/find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:text="비밀번호 찾기"
                android:textSize="17sp"
                android:background="@color/white"
                android:textColor="#925A5757"
                android:fontFamily="@font/nanumgothic"
                app:layout_constraintTop_toBottomOf="@+id/login_button"
                >
            </android.widget.Button>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="20"

                app:layout_constraintTop_toBottomOf="@+id/find_password"
                >

                <TextView
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="계정이 없으신가요?"
                    android:background="@color/white"
                    android:textColor="#925A5757"
                    android:fontFamily="@font/nanumgothic"
                    android:textSize="17sp" />

                <android.widget.Button
                    android:id="@+id/Layout_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="@string/register"
                    android:textSize="17sp"
                    android:background="@color/white"
                    android:textColor="#925A5757"
                    android:fontFamily="@font/nanumgothic"
                    >
                </android.widget.Button>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>