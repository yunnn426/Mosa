<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="15dp"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/mosa_logo"
        android:layout_width="120dp"
        android:layout_height="79dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/mosa_color"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        app:layout_constraintTop_toBottomOf="@+id/mosa_logo"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/account_image"
                    android:layout_marginTop="30dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/create_text"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="100dp"
                    android:layout_marginTop="30dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bin_white"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bin_red"
                android:layout_marginHorizontal="20dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/user_icon" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:fontFamily="@font/nanumgothic"
                    android:hint="name"
                    android:id="@+id/TextInputEditText_name"
                    android:textColor="@color/white_gray"
                    android:textColorHint="@color/white_gray"
                    >
                </EditText>>
            </LinearLayout>>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bin_red"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/email_icon" />

                <EditText
                    android:id="@+id/TextInputEditText_email"
                    android:layout_width="295dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:textColor="@color/white_gray"
                    android:textColorHint="@color/white_gray"
                    android:fontFamily="@font/nanumgothic"
                    android:hint="email" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bin_red"
                android:layout_marginHorizontal="20dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/lock_icon" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:hint="password"
                    android:id="@+id/TextInputEditText_password"
                    android:textColor="@color/white_gray"
                    android:textColorHint="@color/white_gray"
                    android:fontFamily="@font/nanumgothic"
                    >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bin_red"
                android:layout_marginHorizontal="20dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/lock_icon" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:hint="check password"
                    android:textColor="@color/white_gray"
                    android:textColorHint="@color/white_gray"
                    android:id="@+id/TextInputEditText_passwordcheck"
                    android:fontFamily="@font/nanumgothic"
                    >
                </EditText>
            </LinearLayout>

            <android.widget.Button
                android:id="@+id/Signup_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/bin_login2"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="계정 생성하기"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:fontFamily="@font/nanumgothic"
                >
            </android.widget.Button>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:text="이미 계정이 있으신가요?"
                    android:textSize="17sp"
                    android:fontFamily="@font/nanumgothic"
                    ></TextView>

                <android.widget.Button
                    android:id="@+id/back_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@color/white"
                    android:text="@string/login"
                    android:textStyle="bold"
                    android:textColor="#925A5757"
                    android:textSize="17sp"
                    android:fontFamily="@font/nanumgothic"
                    >

                </android.widget.Button>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>