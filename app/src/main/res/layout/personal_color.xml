<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

        <!--컬러별 일러스트-->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <!-- 스크롤시 접히는 부분-->
                <ImageView
                    android:id="@+id/skin_img"
                    android:layout_width="wrap_content"
                    android:layout_height="224dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/spring_warm_light_img"
                    android:layout_gravity="center_horizontal"
                    app:layout_collapseMode="parallax"
                    />

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin"
                    android:background="#ffffff"
                    >
                    <ImageView
                        android:id="@+id/mosa_logo"
                        android:layout_width="120dp"
                        android:layout_height="79dp"
                        android:background="@drawable/mosa_color"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        />

                    <ImageButton
                        android:id="@+id/close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="30dp"
                        />
                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- 설명 -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!--데일리님의 진단결과-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_username"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:text="데일리"
                        android:fontFamily="@font/nanumgothic"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="님의 진단결과"
                        android:textSize="15dp"

                        android:fontFamily="@font/nanumgothic"
                        />
                </LinearLayout>

                <!--컬러-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="20dp"
                    >
                    <TextView
                        android:id="@+id/title_usercolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/pont_color"
                        android:textSize="18dp"
                        android:text="데일리의 색상"
                        android:textStyle="bold"
                        android:fontFamily="@font/nanumgothic"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:textColor="@color/detail_color"
                    android:id="@+id/color_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="35dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/nanumgothic"
                    android:text="@string/summer_cool_Bright"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/selected_color_chrt_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/spring_worm_light_color_chart"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/recom_user_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="@color/pont_color"
                            android:text="고객님의 색상"
                            android:fontFamily="@font/nanumgothic"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="을 위한"
                            android:fontFamily="@font/nanumgothic"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="추천 메이크업 제품"
                        android:fontFamily="@font/nanumgothic"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cos_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/recom_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:text="데일리"
                            android:fontFamily="@font/nanumgothic"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="님의"
                            android:fontFamily="@font/nanumgothic"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="얼굴형에 어울리는"
                        android:fontFamily="@font/nanumgothic"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="헤어스타일 추천"
                        android:fontFamily="@font/nanumgothic"
                        />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hair_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:text="옷 추천"
                    android:fontFamily="@font/nanumgothic"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cloth_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>




