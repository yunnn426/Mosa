<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:background="#ffffff"
    >

        <ImageView
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:background="@drawable/mosa_logo"

            android:id="@+id/mosa_logo"

            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="center"
            android:background="@drawable/third_page_pic"

            android:layout_marginTop="40dp"

            android:id="@+id/third_page_pic"

            app:layout_constraintTop_toBottomOf="@+id/mosa_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/third_page_text"

            android:layout_marginTop="40dp"

            android:id="@+id/third_page_text"

            app:layout_constraintTop_toBottomOf="@+id/third_page_pic"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginHorizontal="120dp"
            android:background="@drawable/third_page_slide"
            android:layout_marginTop="50dp"

            app:layout_constraintTop_toBottomOf="@+id/third_page_text"
            />

        <!--        <ImageView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="55dp"-->
        <!--            android:layout_marginHorizontal="40dp"-->
        <!--            android:background="@drawable/third_page_start" />-->

</androidx.constraintlayout.widget.ConstraintLayout>
